<% layout('layouts/boilerplate') %>
    
    <h1>All Animals</h1>

    

   
    <% for (let animal of animals) { %>
       <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= animal.image %>" class="img-fluid" alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= animal.species %></h5>
                    <p class="card-text"><%= animal.comment %></p>
                    <p class="card-text">
                        <small class="text-secondary"><%= animal.location %></small>
                    </p>
                    <a href="/animals/<%= animal._id %>" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
       </div>
    <% } %>
    

