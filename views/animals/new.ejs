<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Animal</h1>
        <div class="col-6 offset-3">
            <form action="/animals" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label  class="form-label" for="species">Species</label>
                    <input  class="form-control" type="text" id="species" name="animal[species]" required>
                </div>
                <div class="mb-3">
                    <label  class="form-label" for="location">Location</label>
                    <input  class="form-control" type="text" id="location" name="animal[location]" required>
                </div>
                <div class="mb-3">
                    <label  class="form-label" class="form-label" for="image">Image Url</label>
                    <input  class="form-control" class="form-control" type="text" id="image" name="animal[image]" required>
                <div class="mb-3">
                    <label  class="form-label" for="description">Description</label>
                    <input  class="form-control" type="text" id="description" name="animal[description]" required>
                </div>
                <div class="mb-3">
                    <label  class="form-label" for="name">Name (Optional)</label>
                    <input  class="form-control" type="text" id="name" name="animal[name]">
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Animal</button>
                </div>
            </form>      
        </div>
    </div>

